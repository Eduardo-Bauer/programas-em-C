#include<stdio.h>
void main()
{
         int i, valor, maior, menor, media;
         media = 0;
         maior = 0;
         menor = 999999999;
         for(i=0;i<50;i++){
                  printf("digite um valor\n");
                  scanf("%d", &valor);
                  if(valor>maior){
                           maior = valor;
                  }
                  if(valor<menor){
                           menor = valor;
                  }
                  media = media+valor;
         }
         media = media/i;
         printf("maior: %d\n", maior);
         printf("menor: %d\n", menor);
         printf("media aritmetica é: %d\n", media);
}
