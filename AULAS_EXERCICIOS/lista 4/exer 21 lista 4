#include<stdio.h>
void main()
{
         int par[30], impar[30], contpar, contimpar, i, numero;
         contpar = 0;
         contimpar = 0;
         for(i=0;i<30;i++){
                  printf("digite os valores:\n");
                  scanf("%d", &numero);
                  if(numero%2==0){
                           par[contpar] = numero;
                           contpar++;
                  } else{
                           impar[contimpar] = numero;
                           contimpar++;
                  }
         }
         for(i=0;i<contpar;i++){
                  printf("%d ", par[i]);
         }
         printf("\n");
         for(i=0;i<contimpar;i++){
                  printf("%d ", impar[i]);
         }
}
